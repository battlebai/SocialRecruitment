@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->

    <title>@RenderSection("TitleContent", false)</title>

    <!-- 新 Bootstrap 核心 CSS 文件 -->
    <link rel="stylesheet" href="//cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link href="~/Content/Blog/main.css" rel="stylesheet" />
    @*<script src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
    <script src="//cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>*@
    <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/Scripts/JScriptForm.js"></script> 
    <link href="~/Content/pagerstyles.css" rel="stylesheet" />
    <script src="~/Scripts/Validate.js" type="text/javascript"></script>   
    <script src="~/Scripts/JScriptCommon.js" type="text/javascript"></script>  
    @RenderSection("HeadContent", false)

</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <!-- logo -->
                <a href="http://www.langben.com/">
                    <img class="logo" src="~/images/logo.png" alt="" style="width: 207px;" />
                </a>
            </div>
            <div  class="col-md-3" style="float:right"> 
                <h3>
                    <a href="~/Blog/Index" style="margin-right:20px;" id="aTopHomePage">首页</a>
                    <a href="~/Account/Edit" style="margin-right:20px;" id="aTopPersonalInformation">个人资料</a>
                    <a href="~/Account/Login" style="margin-right:20px;" id="aTopLogin">登录</a>
                    <a href="~/Account/Register" id="aTopRegister">注册</a>
                </h3>

            </div>
        </div>
        <div class="container" style="min-height: 500px">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <span class="footer-company"> <a target="_blank" title="北京狼奔科技有限公司" href="http://www.langben.com/">北京狼奔科技有限公司</a></span>
                </div>
                <div class="col-md-6">
                    <div class="footer-right">
                        <span class="footer-company">邮箱</span> ben@langben.com
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
<script type="text/javascript">
    $(function () {
        
        var YesHideIDList =["#aTopLogin","#aTopRegister"];//已登录隐藏控件
        var YesShowIDList = ["#aTopHomePage","#aTopPersonalInformation"];//已登录显示控件
        var NoHideIDList = ["#aTopPersonalInformation"];//未登录隐藏控件
        var NoShowIDList = ["#aTopHomePage","#aTopLogin", "#aTopRegister"];//未登录显示控件
       
        //控制页头控件
        TopBtnHideShow(YesHideIDList, YesShowIDList, NoHideIDList, NoShowIDList);



    });
  
</script>